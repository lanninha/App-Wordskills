<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/roxoEscuro"
        tools:context=".Home">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/carrossel"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="190dp" />

        <Button
            android:id="@+id/my_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Visite o site da competição"
            android:backgroundTint="@color/roxoMedio"
            android:layout_marginTop="410dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/menu_icon"
            android:src="@drawable/menu_icon" />

        <ImageView
            android:id="@+id/logows"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="270dp"
            app:srcCompat="@drawable/logo_worldskills" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="world"
            android:textColor="@color/branco"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="104dp"
            android:layout_marginLeft="80dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="skills"
            android:textColor="@color/branco"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="104dp"
            android:layout_marginLeft="210dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="343dp"
            android:layout_height="160dp"
            android:text="“A WorldSkills transforma a vida desses jovens, que têm a oportunidade de alcançar um altíssimo nível técnico e estar entre os melhores do mundo. Para o país, temos um retorno imediato por mantermos atualizados os instrutores e as escolas com as melhores práticas e tecnologias internacionais”, destaca o delegado técnico do Brasil, Jeferson Mateucci."
            android:textColor="@color/branco"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="480dp"
            android:textSize="15dp"
            android:justificationMode="inter_word" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/pedro_pe"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="650dp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:text="Pedro Lucas, Competidor da WorldSkills na modalidade de  #02 (Cabeamento), está em destaque após uma impressionante vitória no Campeonato Nacional. Com sua habilidade e dedicação, Pedro conquistou o primeiro lugar."
            android:textColor="@color/branco"
            android:layout_marginLeft="215dp"
            android:layout_marginTop="650dp"
            android:textSize="14dp"
            android:justificationMode="inter_word" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="1º - Pedro Lucas"
            android:textColor="@color/branco"
            android:textSize="15dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="828dp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
